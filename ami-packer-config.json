{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_USR`}}",
    "aws_secret_key": "{{env `AWS_ACCESS_KEY_PSW`}}",
    "project_version": "{{env `PROJECT_VERSION`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "sa-east-1",
      "source_ami": "ami-09f4cd7c0b533b081",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "access-log-analysis-service-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install -y openjdk-11-jre"
      ]
    },
    {
      "type": "file",
      "source": "build/distributions/access-log-analysis-service-{{user `project_version`}}.tar",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "shell",
      "inline": [
        "tar xvf /home/ubuntu/access-log-analysis-service-{{user `project_version`}}.tar -C /home/ubuntu/",
        "rm /home/ubuntu/*.tar",
        "crontab -l | { cat; echo \"@reboot /home/ubuntu/access-log-analysis-service-{{user `project_version`}}/bin/access-log-analysis-service 8090\"; } | crontab -"
      ]
    }
  ]
}